 <div class="container">
  <%= link_to "Cocktails List", cocktail_path, class: "btn btn-primary" %>
  <h1><%= @cocktail.name %></h1>

  <div class="container">
  <div class="row justify-content-center mt-5">
    <% @cocktail.doses.each do |dose| %>
      <div class="col-4">
        <div class="card-category">
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to "Destroy", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"}, class: "card-remove-link btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render "doses/new" %>
 </div>


